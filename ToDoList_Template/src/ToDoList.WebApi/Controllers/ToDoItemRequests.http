# For more info on HTTP files go to https://aka.ms/vs/httpfile
@host=http://localhost
@port=5000


//List all ToDoItems
GET {{host}}:{{port}}/api/ToDoItems

###

//Get specific ToDoItem by id
@itemToGetId = 1
GET {{host}}:{{port}}/api/ToDoItems/{{itemToGetId}}

###

//Add new ToDoItem
POST {{host}}:{{port}}/api/ToDoItems
Content-Type: application/json

{
  "name": "Example New Task",
  "description": "Example New Description",
  "isCompleted": true,
  "category": "Work"
}

###

//Add new ToDoItem without Category
POST {{host}}:{{port}}/api/ToDoItems
Content-Type: application/json

{
  "name": "Example New Task",
  "description": "Example New Description",
  "isCompleted": true,
  "category": null
}

###

//Update existing ToDoItem by id
@itemToUpdateId = 1

PUT {{host}}:{{port}}/api/ToDoItems/{{itemToUpdateId}}
Content-Type: application/json

{
  "name": "Updated Task",
  "description": "Updated Description",
  "isCompleted": false,
  "category": "Personal"
}

###

//Update existing ToDoItem by id without Category
PUT {{host}}:{{port}}/api/ToDoItems/{{itemToUpdateId}}
Content-Type: application/json

{
  "name": "Updated Task",
  "description": "Updated Description",
  "isCompleted": false,
  "category": null
}

###

//Delete exisiting ToDoItem by id
@itemToDeleteId = 1
DELETE {{host}}:{{port}}/api/ToDoItems/{{itemToDeleteId}}
